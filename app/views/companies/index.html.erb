<h1>Companies that hire out of Turing</h1>
<p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>Description</th>
      <th>Website</th>
      <th>Industry</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.location_city %></td>
        <td><%= company.location_state %></td>
        <td><%= company.description %></td>
        <td><%= company.website %></td>
        <td><%= company.industry %></td>
        <td><%= company.company_size %></td>
      </tr>
    <% end %>
  </tbody>
</table>

