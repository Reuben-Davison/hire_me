<p id="notice"><%= notice %></p>

<h1 class="text-2xl text-center font-semibold my-2">Companies that hire out of Turing</h1>

<table>
  <thead class= "bg-white" >
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th>Industry</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @companies.each do |company| %>
        <tr class="even:bg-slate-200 odd:bg-zinc-100">
          <td class= "font-serif font-semibold text-slate-600 hover:text-sky-400"><a href="<%=company.website%>"><%= company.name %></a></td>
          <td><%= company.location_city %>, <%= company.location_state %></td>
          <td><%= company.description %></td>
          <td><%= company.industry %></td>
          <td><%= company.company_size %></td>
        </tr>
      <% end %>
  </tbody>
</table>
<div class="text-center font-semibold"><%= will_paginate @companies %></div>

